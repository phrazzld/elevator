{
  "name": "prompt-elevator",
  "version": "1.0.0",
  "description": "A lightweight CLI that continuously accepts natural-language prompts and returns richer, more technical articulations using Google Gemini 2.5 Flash",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "prompt-elevator": "dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:prod && npm run build:validate",
    "build:prod": "tsc --project tsconfig.prod.json",
    "build:dev": "tsc",
    "build:validate": "node -e \"const fs=require('fs'); const cli=require('./dist/cli.js'); if(!fs.existsSync('./dist/cli.js')||!fs.existsSync('./dist/cli.d.ts')) throw new Error('Build validation failed: missing essential files'); fs.chmodSync('./dist/cli.js', 0o755); console.log('âœ… Build validation passed');\"",
    "dev": "tsc --watch",
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('dist')) fs.rmSync('dist', {recursive: true, force: true}); console.log('ðŸ§¹ Cleaned build artifacts');\"",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:ci": "vitest run --coverage --reporter=default",
    "test:integration": "test/integration/publish.test.sh",
    "coverage:report": "vitest run --coverage --reporter=json --reporter=html",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm run lint && npm run typecheck && npm run test:coverage:ci",
    "publish:check": "npm pack --dry-run",
    "publish:local": "npm pack",
    "prepack": "npm run build",
    "postpack": "echo 'ðŸ“¦ Package ready for publishing'"
  },
  "keywords": [
    "cli",
    "prompt",
    "ai",
    "artificial-intelligence",
    "gemini",
    "google",
    "google-ai",
    "prompt-engineering",
    "prompt-enhancement",
    "developer-tools",
    "command-line",
    "terminal",
    "repl",
    "interactive",
    "typescript",
    "node",
    "nodejs"
  ],
  "author": "CLI Development Team",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phaedrus/elevator.git"
  },
  "bugs": {
    "url": "https://github.com/phaedrus/elevator/issues"
  },
  "homepage": "https://github.com/phaedrus/elevator#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.15.24",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.ts": [
      "tsc --noEmit --skipLibCheck"
    ]
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}
