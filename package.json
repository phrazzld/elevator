{
  "name": "prompt-elevator",
  "version": "0.1.0",
  "description": "A lightweight CLI that continuously accepts natural-language prompts and returns richer, more technical articulations using Google Gemini 2.5 Flash",
  "main": "dist/cli.js",
  "bin": {
    "prompt-elevator": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "prompt",
    "ai",
    "gemini",
    "google",
    "prompt-engineering",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/prompt-elevator.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/prompt-elevator/issues"
  },
  "homepage": "https://github.com/yourusername/prompt-elevator#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.15.24",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.ts": [
      "tsc --noEmit --skipLibCheck"
    ]
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "ora": "^8.2.0",
    "pino": "^9.7.0"
  }
}
